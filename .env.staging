# Staging environment template
# Copy this to .env in staging and update with your values

# Application environment
APP_ENV=staging

# Server configuration
APP_SERVER__HOST=0.0.0.0
APP_SERVER__PORT=8080

# Database configuration
APP_DATABASE__URL=postgres://username:password@staging-db-host:5432/rusty_saas_staging
APP_DATABASE__MAX_CONNECTIONS=50
APP_DATABASE__MIN_CONNECTIONS=5

# JWT configuration
APP_JWT__SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_VALUE_MINIMUM_64_CHARACTERS
APP_JWT__EXPIRATION_HOURS=24

# CORS configuration
APP_CORS__ALLOWED_ORIGINS=https://staging.yourdomain.com,https://staging-api.yourdomain.com

# Logging - more verbose for debugging in staging
RUST_LOG=rusty_saas=debug,tower_http=debug,sqlx=info
